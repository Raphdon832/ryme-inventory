rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public app collections (no auth in the client yet)
    match /products/{docId} {
      allow read, write: if true;
    }

    match /orders/{docId} {
      allow read, write: if true;
    }

    match /tasks/{docId} {
      allow read, write: if true;
    }

    match /events/{docId} {
      allow read, write: if true;
    }

    match /team_members/{docId} {
      allow read, write: if true;
    }

    match /activity_log/{docId} {
      allow read, write: if true;
    }

    match /recycle_bin/{docId} {
      allow read, write: if true;
    }

    // App settings (single doc)
    match /app_settings/{docId} {
      allow read, write: if true;
    }

    // Default: deny anything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
