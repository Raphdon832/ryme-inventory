rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public app collections (no auth in the client yet)
    match /products/{document=**} {
      allow read, write: if true;
    }

    match /orders/{document=**} {
      allow read, write: if true;
    }

    match /tasks/{document=**} {
      allow read, write: if true;
    }

    match /events/{document=**} {
      allow read, write: if true;
    }

    match /team_members/{document=**} {
      allow read, write: if true;
    }

    match /customers/{document=**} {
      allow read, write: if true;
    }

    match /vendors/{document=**} {
      allow read, write: if true;
    }

    match /activity_log/{document=**} {
      allow read, write: if true;
    }

    match /recycle_bin/{document=**} {
      allow read, write: if true;
    }

    match /categories/{document=**} {
      allow read, write: if true;
    }

    match /expenses/{document=**} {
      allow read, write: if true;
    }

    match /income/{document=**} {
      allow read, write: if true;
    }

    match /vouchers/{document=**} {
      allow read, write: if true;
    }

    // App settings (single doc)
    match /app_settings/{document=**} {
      allow read, write: if true;
    }

    // Default: deny anything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
